generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// user schema
model User{
  id String @id @default(cuid())
  name String?
  email String @unique
  password String
  role Role @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  refreshToken String? @unique
}

// schema for product
model product{
  id String @id @default(cuid())
  name String
  brand String
  category String
  description String
  price Float
  gender String
  sizes String[]
  colors String[]
  stock Int
  soldCount Int
  rating Float? 
  reviews String[]
  images String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isFeatured Boolean @default(false)      // isFeatured --> indicates that the product is featured or not. hence a boolean value.
}


// schema for 'settings' --> in this we can control the banner.. but this will only be able to be done by SuperAdmin
model FeatureBanner{
    id String @id @default(cuid())
    imageUrl String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

}

// model for coupon
model Coupon{
  id String @id @default(cuid())
  code String @unique
  discountPercent Float
  startDate DateTime
  endDate DateTime
  usageLimit Int
  usageCount Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}




enum Role{
  USER
  SUPER_ADMIN
  
}